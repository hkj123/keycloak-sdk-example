{
  "compilerOptions": {
      "outDir": "build",
      "lib": [ "es6" ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "declaration": true
  },
  "include": [
    "src/**/**.ts"
  ],  
  "exclude":[
    "views",
    "static"
  ]
}